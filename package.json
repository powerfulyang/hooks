{
  "name": "@powerfulyang/hooks",
  "version": "0.3.6",
  "description": "util hooks",
  "keywords": [
    "react-hooks"
  ],
  "author": "powerfulyang <i@powerfulyang.com>",
  "homepage": "https://github.com/powerfulyang/tools",
  "license": "MIT",
  "main": "dist/main/index.js",
  "module": "dist/module/index.js",
  "sideEffects": false,
  "files": [
    "dist",
    "src"
  ],
  "browserslist": [
    "last 2 versions"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/powerfulyang/tools.git"
  },
  "scripts": {
    "patch-version": "npm version patch --no-git-tag-version",
    "build": "rimraf dist && run-s build:*",
    "build:init": "node ./init.js",
    "build:main": "tsc -p tsconfig.json",
    "build:module": "tsc -p tsconfig.module.json",
    "watch:build": "tsc -p tsconfig.module.json --watch",
    "prettier": "prettier \"src/**/*.{ts,tsx}\" --write",
    "lint:js": "eslint --ext .js,.jsx,.ts,.tsx ./src --fix",
    "prepare": "npx husky install",
    "tsc": "tsc --noEmit",
    "precommit": "npm run lint:js && npm run tsc && npm run prettier && npm run build",
    "prepublishOnly": "npm run build"
  },
  "bugs": {
    "url": "https://github.com/powerfulyang/tools/issues"
  },
  "devDependencies": {
    "@powerfulyang/lint": "^0.7.10",
    "@testing-library/react-hooks": "^7.0.2",
    "npm-run-all": "^4.1.5",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-test-renderer": "^17.0.2",
    "typescript": "^4.5.5"
  },
  "peerDependencies": {
    "react": "^17.0.2",
    "react-dom": "^17.0.2"
  },
  "dependencies": {
    "@powerfulyang/utils": "^1.3.10",
    "immer": "^9.0.12",
    "rxjs": "^7.5.4"
  }
}
