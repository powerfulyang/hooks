{
  "name": "@powerfulyang/hooks",
  "version": "0.3.9",
  "description": "util hooks",
  "keywords": [
    "react-hooks"
  ],
  "author": "powerfulyang <i@powerfulyang.com>",
  "homepage": "https://github.com/powerfulyang/tools",
  "license": "MIT",
  "main": "dist/main/index.js",
  "module": "dist/module/index.js",
  "sideEffects": false,
  "files": [
    "dist",
    "src"
  ],
  "browserslist": [
    "last 2 versions"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/powerfulyang/tools.git"
  },
  "scripts": {
    "patch-version": "npm version patch --no-git-tag-version",
    "build": "rimraf dist && run-s build:*",
    "build:init": "node ./init.js",
    "build:cjs": "tsc -p tsconfig.cjs.json",
    "build:esm": "tsc -p tsconfig.esm.json",
    "build:types": "tsc -p tsconfig.types.json",
    "prettier": "prettier \"src/**/*.{ts,tsx}\" --write",
    "lint:js": "eslint --ext .ts,.tsx ./src --fix",
    "prepare": "npx husky install",
    "tsc-check": "tsc --noEmit",
    "precommit": "npm run tsc-check && lint-staged",
    "prepublishOnly": "npm run build"
  },
  "bugs": {
    "url": "https://github.com/powerfulyang/tools/issues"
  },
  "devDependencies": {
    "@powerfulyang/lint": "0.7.14",
    "@testing-library/react-hooks": "8.0.0",
    "@types/react": "18.0.6",
    "@types/react-dom": "18.0.2",
    "npm-run-all": "4.1.5",
    "react-test-renderer": "18.0.0",
    "standard-version": "^9.3.2"
  },
  "dependencies": {
    "@powerfulyang/utils": "1.3.12",
    "immer": "9.0.12",
    "react": "18.0.0",
    "react-dom": "18.0.0",
    "rxjs": "7.5.5"
  }
}
